{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Config": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Debug",
        "Config": "Debug",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "None"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "LoggerColorBehavior": "Enabled",
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss.fff ",
        "UseUtcTimestamp": true
      },
      "DisableContextRendering": true
    }
  },
  "AllowedHosts": "*"
}
